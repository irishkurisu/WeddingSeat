<h1>Please add a guest</h1>
<%= form_for @guest do |f| %>
    First name: <%= f.text_field :first_name %><br />
    Last name : <%= f.text_field :last_name %><br />
    Table     : <%= f.collection_select :table_id, Table.order(:name),:id,:name%>
    <%= f.submit 'Add Guest', class: 'add-guest' %>
<% end %>